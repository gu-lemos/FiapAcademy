@if (IsVisible)
{
    <div class="modal-overlay" @onclick="OnCancel">
        <div class="modal-container" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" @onclick="OnCancel"></button>
            </div>
            <div class="modal-body">
                <p>@Message</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="OnCancel">
                    Cancelar
                </button>
                <button type="button" class="btn btn-primary" @onclick="OnConfirm" disabled="@IsLoading">
                    @if (IsLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>@LoadingText</span>
                    }
                    else
                    {
                        <span>@ConfirmText</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public string Title { get; set; } = "Confirmar";
    [Parameter] public string Message { get; set; } = "Tem certeza que deseja executar esta ação?";
    [Parameter] public string ConfirmText { get; set; } = "Confirmar";
    [Parameter] public string LoadingText { get; set; } = "Processando...";
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
} 